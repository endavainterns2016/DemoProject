<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Commit: 1"
        android:textColor="@color/text"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message:"
        android:paddingBottom="5dp"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/commit_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merge pull request #41 from endavainterns2016/fixes_after_last_meeting\n\nFixes after last meeting"
        android:paddingBottom="10dp"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:paddingBottom="5dp"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/commit_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2016-04-20T07:55:03Z"
        android:paddingBottom="10dp"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/sha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHA:"
        android:paddingBottom="5dp"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/commit_sha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="acd1a844070b6db9a05eb80e92a8c4392ac0e546"
        android:paddingBottom="10dp"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Author:"
        android:paddingBottom="5dp"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/commit_author_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: Leonid Buzmacov"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/commit_author_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: lbuzmacov@endava.net"
        android:paddingBottom="10dp"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/commiter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Commiter:"
        android:paddingBottom="5dp"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/commit_commiter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: endava.interns2016"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/commit_commiter_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: endava.interns2016@gmail.com"
        android:paddingBottom="10dp"
        android:textColor="@color/text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimaryLight" />

</LinearLayout>